<%= form_for(Message.new, html: {class: "form-horizontal"})  do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label text-center">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %> 
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label text-center">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2 control-label text-center">年齢：</label>
    <div class="col-sm-10">
      <%= f.text_field :age, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn col-sm-offset-2 btn-primary text-center" %>
  </div>
<% end %>