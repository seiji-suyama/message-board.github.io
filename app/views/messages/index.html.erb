<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
    <br>
    <% end %>
   </div>
</div>


<%= form_for(Message.new, html: {class: "form-horizontal"})  do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label text-center">名前:</label>
    <%= f.text_field :name %> 
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label text-center">内容:</label>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn col-sm-offset-2 btn-primary text-center" %>
  </div>
<% end %>
</form>